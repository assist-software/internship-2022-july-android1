                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="@string/birth_date_placeholder"
                app:layout_constraintStart_toStartOf="@id/tv_title_birth_date"
                app:layout_constraintTop_toBottomOf="@id/tv_title_birth_date" />

            <View
                android:id="@+id/v_line_birth_date"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@color/gray_200"
                app:layout_constraintTop_toBottomOf="@id/tv_birth_date_preview" />

            <TextView
                android:id="@+id/tv_title_email"
                style="@style/profile_edit_option_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_20dp"
                android:text="@string/email_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_line_birth_date" />

            <TextView
                android:id="@+id/tv_edit_email"
                style="@style/sign_up_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_28dp"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/edit"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title_email" />

            <TextView
                android:id="@+id/tv_cancel_email"
                style="@style/sign_up_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_28dp"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/cancel"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title_email" />

            <TextView
                android:id="@+id/tv_email_preview"
                style="@style/profile_edit_option_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="@string/email_placeholder"
                app:layout_constraintStart_toStartOf="@id/tv_title_email"
                app:layout_constraintTop_toBottomOf="@id/tv_title_email" />

            <EditText
                android:id="@+id/et_email_input"
                style="@style/edit_text_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_8dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@drawable/input_border_normal"
                android:inputType="textEmailAddress"
                android:padding="@dimen/space_12dp"
                android:text="@string/placeholder"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/tv_email_preview"
                app:layout_constraintTop_toBottomOf="@id/tv_email_preview"
                app:layout_goneMarginTop="@dimen/space_16dp" />

            <Button
                android:id="@+id/btn_email_save"
                style="@style/styleLoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@drawable/login_button_border"
                android:fontFamily="@font/inter"
                android:text="@string/save"
                android:textAlignment="center"
                android:textAppearance="@style/sign_up_google"
                android:textFontWeight="600"
                android:visibility="gone"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="@id/et_email_input"
                app:layout_constraintTop_toBottomOf="@id/et_email_input" />

            <View
                android:id="@+id/v_line_email"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@color/gray_200"
                app:layout_constraintTop_toBottomOf="@id/btn_email_save" />

            <TextView
                android:id="@+id/tv_title_phone"
                style="@style/profile_edit_option_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_20dp"
                android:text="@string/phone_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_line_email" />

            <TextView
                android:id="@+id/tv_edit_phone"
                style="@style/sign_up_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_28dp"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/edit"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title_phone" />

            <TextView
                android:id="@+id/tv_cancel_phone"
                style="@style/sign_up_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_28dp"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/cancel"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title_phone" />

            <TextView
                android:id="@+id/tv_phone_preview"
                style="@style/profile_edit_option_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="@string/phone_placeholder"
                app:layout_constraintStart_toStartOf="@id/tv_title_phone"
                app:layout_constraintTop_toBottomOf="@id/tv_title_phone" />

            <EditText
                android:id="@+id/et_phone_input"
                style="@style/edit_text_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_8dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@drawable/input_border_normal"
                android:inputType="number"
                android:padding="@dimen/space_12dp"
                android:text="@string/placeholder"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/tv_phone_preview"
                app:layout_constraintTop_toBottomOf="@id/tv_phone_preview"
                app:layout_goneMarginTop="@dimen/space_16dp" />

            <Button
                android:id="@+id/btn_phone_save"
                style="@style/styleLoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@drawable/login_button_border"
                android:fontFamily="@font/inter"
                android:text="@string/save"
                android:textAlignment="center"
                android:textAppearance="@style/sign_up_google"
                android:textFontWeight="600"
                android:visibility="gone"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="@id/et_phone_input"
                app:layout_constraintTop_toBottomOf="@id/et_phone_input" />

            <View
                android:id="@+id/v_line_phone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@color/gray_200"
                app:layout_constraintTop_toBottomOf="@id/btn_phone_save" />

            <TextView
                android:id="@+id/tv_title_address"
                style="@style/profile_edit_option_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_20dp"
                android:text="@string/address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_line_phone" />

            <TextView
                android:id="@+id/tv_edit_address"
                style="@style/sign_up_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_28dp"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/edit"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title_address" />

            <TextView
                android:id="@+id/tv_cancel_address"
                style="@style/sign_up_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_28dp"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/cancel"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title_address" />

            <TextView
                android:id="@+id/tv_address_preview"
                style="@style/profile_edit_option_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="@string/address_not_provided"
                app:layout_constraintStart_toStartOf="@id/tv_title_address"
                app:layout_constraintTop_toBottomOf="@id/tv_title_address" />

            <EditText
                android:id="@+id/et_address_input"
                style="@style/edit_text_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_8dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@drawable/input_border_normal"
                android:padding="@dimen/space_12dp"
                android:text="@string/placeholder"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/tv_address_preview"
                app:layout_constraintTop_toBottomOf="@id/tv_address_preview"
                app:layout_goneMarginTop="@dimen/space_16dp" />

            <Button
                android:id="@+id/btn_address_save"
                style="@style/styleLoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@drawable/login_button_border"
                android:fontFamily="@font/inter"
