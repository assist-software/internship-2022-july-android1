<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.add.PreviewListingActivity">

    <include
        android:id="@+id/toolbar"

        layout="@layout/toolbar_layout" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_main_picture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_198dp"
                android:layout_marginTop="@dimen/space_24dp"
                app:layout_constraintTop_toTopOf="parent"

                />

            <ImageView
                android:id="@+id/iv_more_picture_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_13dp"
                android:layout_marginBottom="@dimen/space_12dp"
                android:background="@drawable/more_pictures_button"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="@+id/iv_main_picture"
                app:layout_constraintEnd_toEndOf="@+id/iv_main_picture" />


            <LinearLayout
                android:id="@+id/ll_share_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_24dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_main_picture">


                <TextView
                    android:id="@+id/tv_title_estate"
                    style="@style/listing_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_56dp"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="@string/title_example"

                    />

                <Button
                    android:id="@+id/btn_share"
                    style="@style/share_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/share_icon"
                    android:singleLine="true"
                    android:text="@string/share" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_price_estate"
                style="@style/listing_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="@string/price_example"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_share_title" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price_estate">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_purchase"
                    style="@style/styleLoginButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_heart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_16dp"
                    android:layout_marginEnd="@dimen/space_16dp"
                    android:background="@drawable/login_button_border"
                    android:textAllCaps="false"
                    android:text="@string/purchase" />

                <ImageButton
                    android:id="@+id/btn_heart"
                    android:layout_width="@dimen/space_44dp"
                    android:layout_height="@dimen/space_44dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/space_16dp"
                    android:layout_marginEnd="@dimen/space_16dp"
                    android:background="@drawable/border_passwd"
                    android:src="@drawable/heart_icon"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView

                android:id="@+id/tv_description"
                style="@style/title_section_listing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_24dp"
                android:text="@string/description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_layout" />

            <TextView
                android:id="@+id/tv_description_text"
                style="@style/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_12dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:singleLine="false"
                android:text="@string/long_text_example"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_description" />

            <TextView
                android:id="@+id/tv_location"
                style="@style/title_section_listing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_24dp"
                android:text="@string/location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_description_text" />

            <TextView
                android:id="@+id/tv_location_text"
                style="@style/location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_4dp"
                android:text="@string/location_example"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_location" />

            <ImageView
                android:id="@+id/iv_map"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_382dp"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginEnd="@dimen/space_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_location_text" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lv_seller_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_24dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@drawable/input_border_normal"
                android:text="@string/placeholder"
                app:layout_constraintTop_toBottomOf="@+id/iv_map">

                <ImageView
                    android:id="@+id/iv_seller_picture"
                    android:layout_width="@dimen/space_44dp"
                    android:layout_height="@dimen/space_44dp"
                    android:layout_marginStart="@dimen/space_20dp"
                    android:layout_marginTop="@dimen/space_20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_seller_name"
                    style="@style/seller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_12dp"
                    android:text="@string/placeholder_seller_name"
                    app:layout_constraintStart_toEndOf="@id/iv_seller_picture"
                    app:layout_constraintTop_toTopOf="@id/iv_seller_picture" />

                <TextView
                    android:id="@+id/tv_join_date"
                    style="@style/seller_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4dp"
                    android:text="@string/placeholder_join_date"
                    app:layout_constraintStart_toStartOf="@id/tv_seller_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_seller_name" />

                <TextView
                    android:id="@+id/tv_response_rate"
                    style="@style/seller_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4dp"
                    android:text="@string/placeholder_response_rate"
                    app:layout_constraintStart_toStartOf="@id/tv_join_date"
                    app:layout_constraintTop_toBottomOf="@id/tv_join_date" />

                <TextView
                    android:id="@+id/tv_response_time"
                    style="@style/seller_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4dp"
                    android:layout_marginBottom="@dimen/space_20dp"
                    android:text="@string/placeholder_response_time"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_response_rate"
                    app:layout_constraintTop_toBottomOf="@id/tv_response_rate" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_contact_seller"
                style="@style/contact_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:layout_marginBottom="@dimen/space_34dp"
                android:background="@drawable/border_passwd"
                android:backgroundTint="@null"
                android:text="@string/contact_seller"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lv_seller_box" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/space_16dp"
        android:layout_marginBottom="@dimen/space_16dp"
        android:backgroundTint="@color/gray_200"
        android:src="@drawable/icon_msg"
        app:borderWidth="0dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_200">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/this_is_a_preview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/space_24dp"
            android:textColor="@color/gray_600"
            android:fontFamily="inter"
            android:textSize="@dimen/text_14sp"
            android:textFontWeight="600"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16dp"
            android:layout_marginTop="@dimen/space_24dp"
            android:layout_marginEnd="@dimen/space_16dp"
            android:text="@string/edit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_info"
            android:background="@drawable/login_button_border"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/inter"
            android:textAlignment="center"
            android:textAppearance="@style/sign_up_google"
            android:textFontWeight="600"/>

        <Button
            android:id="@+id/btn_publish"
            style="@style/styleLoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16dp"
            android:layout_marginTop="@dimen/space_8dp"
            android:layout_marginEnd="@dimen/space_16dp"
            android:background="@drawable/login_button_border"
            android:text="@string/publish"
            app:backgroundTint="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_edit"
            android:layout_marginBottom="@dimen/space_24dp"
            android:textAlignment="center"
            android:textAppearance="@style/sign_up_google"
            android:textFontWeight="600"
            android:fontFamily="@font/inter"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>