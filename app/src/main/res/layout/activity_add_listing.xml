<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.assist.imobilandroidapp.screens.add.AddListingActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />

    <SearchView
        android:id="@+id/sv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginEnd="@dimen/space_16dp"
        android:iconifiedByDefault="false"
        android:paddingBottom="@dimen/space_16dp"
        android:queryHint="@string/search_for_house"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_search">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/inter"
                android:text="@string/add_new"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="@dimen/text_24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_24dp"
                android:fontFamily="@font/inter"
                android:text="@string/details"
                android:textColor="@color/gray_700"
                android:textFontWeight="700"
                android:textSize="@dimen/text_18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <TextView
                android:id="@+id/tv_thorough"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:fontFamily="@font/inter"
                android:text="@string/be_thorough"
                android:textColor="@color/gray_400"
                android:textFontWeight="400"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_details" />

            <TextView
                android:id="@+id/tv_listing_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:fontFamily="@font/inter"
                android:text="@string/title"
                android:textColor="@color/gray_600"
                android:textFontWeight="500"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_thorough" />

            <EditText
                android:id="@+id/et_listing_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_4dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@drawable/input_border_normal"
                android:hint="@string/title"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/space_12dp"
                android:textSize="@dimen/text_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_listing_title" />

            <TextView
                android:id="@+id/tv_title_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_14dp"
                android:fontFamily="@font/inter"
                android:text="@string/empty_field"
                android:textColor="@color/red_500"
                android:textFontWeight="400"
                android:textSize="@dimen/text_12sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_listing_title" />

            <TextView
                android:id="@+id/tv_listing_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_26dp"
                android:fontFamily="inter"
                android:text="@string/Category"
                android:textColor="@color/gray_600"
                android:textFontWeight="500"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_error" />

            <RelativeLayout
                android:id="@+id/rl_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@drawable/spinner_shape"
                android:orientation="horizontal"
                android:padding="@dimen/space_12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_listing_category">

                <Spinner
                    android:id="@+id/spinner_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:id="@+id/iv_dropdown_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:foregroundGravity="center"
                    android:src="@drawable/dropdown_icon" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/space_16dp"
                    android:layout_toStartOf="@+id/iv_dropdown_icon"
                    android:foregroundGravity="center"
                    android:src="@drawable/vertical_line" />

                <!--                <TextView-->
                <!--                    android:id="@+id/tv_spinner_hint"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_alignParentStart="true"-->
                <!--                    android:layout_centerVertical="true"-->
                <!--                    android:fontFamily="@font/inter"-->
                <!--                    android:text="@string/select_category"-->
                <!--                    android:textColor="@color/gray_200"-->
                <!--                    android:textFontWeight="500"-->
                <!--                    android:textSize="@dimen/text_16sp" />-->
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_category_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_14dp"
                android:fontFamily="@font/inter"
                android:text="@string/choose_category"
                android:textColor="@color/red_500"
                android:textFontWeight="400"
                android:textSize="@dimen/text_12sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_spinner" />

            <TextView
                android:id="@+id/tv_listing_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_26dp"
                android:fontFamily="inter"
                android:text="@string/price"
                android:textColor="@color/gray_600"
                android:textFontWeight="500"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_category_error" />

            <EditText
                android:id="@+id/et_listing_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_4dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@drawable/input_border_normal"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:padding="@dimen/space_12dp"
                android:textSize="@dimen/text_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_listing_price" />

            <TextView
                android:id="@+id/tv_price_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_14dp"
                android:fontFamily="@font/inter"
                android:text="@string/name_your_price"
                android:textColor="@color/red_500"
                android:textFontWeight="400"
                android:textSize="@dimen/text_12sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_listing_price" />

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_2dp"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_32dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/toolbar_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price_error" />

            <TextView
                android:id="@+id/tv_photos_and_videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_32dp"
                android:fontFamily="@font/inter"
                android:text="@string/photos_and_videos"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="@dimen/text_18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_line" />

            <TextView
                android:id="@+id/tv_add_photos_helper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_4dp"
                android:fontFamily="@font/inter"
                android:text="@string/add_photos"
                android:textColor="@color/gray_400"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_photos_and_videos" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_add_photos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_photos_helper">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/space_8dp"
                        android:paddingEnd="@dimen/space_8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btn_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/add_photo_btn" />

                        <ImageView
                            android:id="@+id/btn_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_8dp"
                            android:layout_marginTop="@dimen/space_8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/add_photo_btn" />

                        <ImageView
                            android:id="@+id/btn_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_8dp"
                            android:layout_marginTop="@dimen/space_8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/add_photo_btn" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/space_8dp"
                        android:paddingEnd="@dimen/space_8dp">

                        <ImageView
                            android:id="@+id/btn_4"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_8dp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/add_photo_btn" />

                        <ImageView
                            android:id="@+id/btn_5"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_8dp"
                            android:layout_marginTop="@dimen/space_8dp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/add_photo_btn" />

                        <ImageView
                            android:id="@+id/btn_6"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_8dp"
                            android:layout_marginTop="@dimen/space_8dp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/add_photo_btn" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/space_8dp"
                        android:paddingEnd="@dimen/space_8dp">

                        <ImageView
                            android:id="@+id/btn_7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/space_8dp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/add_photo_btn" />

                        <ImageView
                            android:id="@+id/btn_8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/space_8dp"
                            android:layout_marginTop="@dimen/space_8dp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/add_photo_btn" />

                        <ImageView
                            android:id="@+id/btn_9"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_8dp"
                            android:layout_marginTop="@dimen/space_8dp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/add_photo_btn" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/iv_line_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_2dp"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_32dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/toolbar_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_add_photos" />

            <TextView
                android:id="@+id/tv_listing_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_32dp"
                android:fontFamily="@font/inter"
                android:text="@string/description"
                android:textColor="@color/gray_700"
                android:textFontWeight="700"
                android:textSize="@dimen/text_18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_line_2" />

            <TextView
                android:id="@+id/tv_description_helper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_4dp"
                android:fontFamily="@font/inter"
                android:text="@string/enter_description"
                android:textColor="@color/gray_400"
                android:textFontWeight="400"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_listing_description" />

            <TextView
                android:id="@+id/tv_description_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter"
                android:text="@string/description_details"
                android:textColor="@color/gray_600"
                android:textFontWeight="500"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_description_helper" />

            <EditText
                android:id="@+id/et_listing_description"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_4dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@drawable/spinner_shape"
                android:gravity="top"
                android:hint="@string/enter_description"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_description_details" />

            <TextView
                android:id="@+id/tv_description_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_4dp"
                android:fontFamily="@font/inter"
                android:text="@string/description_helper"
                android:textColor="@color/gray_500"
                android:textFontWeight="400"
                android:textSize="@dimen/text_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_listing_description" />

            <ImageView
                android:id="@+id/iv_line_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_2dp"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_32dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/toolbar_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_description_message" />

            <TextView
                android:id="@+id/tv_contact_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_32dp"
                android:fontFamily="@font/inter"
                android:text="@string/contact_info"
                android:textColor="@color/gray_700"
                android:textFontWeight="700"
                android:textSize="@dimen/text_18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_line_3" />

            <TextView
                android:id="@+id/tv_contact_thorough"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_4dp"
                android:fontFamily="@font/inter"
                android:text="@string/be_thorough"
                android:textColor="@color/gray_400"
                android:textFontWeight="400"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_contact_info" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:fontFamily="@font/inter"
                android:text="@string/location"
                android:textColor="@color/gray_600"
                android:textFontWeight="500"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_contact_thorough" />

            <EditText
                android:id="@+id/et_listing_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_4dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@drawable/input_border_normal"
                android:hint="@string/location"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/space_12dp"
                android:textSize="@dimen/text_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_location" />

            <TextView
                android:id="@+id/tv_location_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_14dp"
                android:fontFamily="@font/inter"
                android:text="@string/empty_field"
                android:textColor="@color/red_500"
                android:textFontWeight="400"
                android:textSize="@dimen/text_12sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_listing_location" />

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_32dp"
                android:fontFamily="@font/inter"
                android:text="@string/phone_number"
                android:textColor="@color/gray_600"
                android:textFontWeight="500"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_location_error" />

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_4dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:background="@drawable/input_border_normal"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:padding="@dimen/space_12dp"
                android:textSize="@dimen/text_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_phone_number" />

            <TextView
                android:id="@+id/tv_phone_number_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_14dp"
                android:fontFamily="@font/inter"
                android:text="@string/empty_field"
                android:textColor="@color/red_500"
                android:textFontWeight="400"
                android:textSize="@dimen/text_12sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_phone_number" />

            <ImageView
                android:id="@+id/iv_line_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_2dp"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_32dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/toolbar_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_phone_number_error" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
