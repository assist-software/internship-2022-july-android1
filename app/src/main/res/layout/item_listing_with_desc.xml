<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_listing_with_desc_border">
    
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="154dp"
        android:layout_height="143dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/space_12dp"
        android:layout_marginBottom="@dimen/space_15dp"
        android:layout_marginStart="@dimen/space_12dp"
        android:background="@drawable/photo_replacement_2"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        app:layout_constraintStart_toEndOf="@+id/iv_photo"
        android:layout_marginStart="@dimen/space_16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/space_12dp"
        android:textSize="@dimen/text_14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter"
        android:textFontWeight="600"
        android:maxLines="3"
        android:maxWidth="@dimen/space_120dp"
        android:gravity="start"/>

    <ImageButton
        android:id="@+id/ib_favourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/space_16dp"
        android:layout_marginEnd="@dimen/space_12dp"
        android:src="@drawable/favourites_icon_gray"
        android:background="@color/white"
        android:layout_marginStart="@dimen/space_12dp"
        />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginTop="@dimen/space_8dp"
        android:layout_marginEnd="@dimen/space_48dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/inter"
        android:maxLines="3"
        android:text="@string/lorem_ipsum"
        android:textColor="@color/gray_400"
        android:textSize="@dimen/text_12sp"
        app:layout_constraintStart_toEndOf="@id/iv_photo"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:ellipsize="end"
        android:maxWidth="@dimen/space_140dp"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        app:layout_constraintStart_toEndOf="@id/iv_photo"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginTop="@dimen/space_8dp"
        android:text="@string/placeholder"
        android:fontFamily="@font/inter"
        android:textColor="@color/black"
        android:textSize="@dimen/text_14sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>