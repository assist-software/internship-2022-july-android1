<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.onboarding.forgotpassword.ForgotPasswordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_logo_assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_21dp"
            android:layout_marginTop="@dimen/space_185dp"
            android:background="@drawable/logo_assist_tagline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_forgot_pass"
            style="@style/styleTitleOnboarding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_24dp"
            android:text="@string/ForgotPassword"
            android:textSize="@dimen/text_24sp"
            app:layout_constraintLeft_toLeftOf="@id/iv_logo_assist"
            app:layout_constraintTop_toBottomOf="@id/iv_logo_assist" />

        <TextView
            android:id="@+id/tv_subtitle_forgot_pass"
            style="@style/styleSubTitleOnboarding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4dp"
            android:text="@string/PasswordResetLink"
            android:textSize="@dimen/text_14sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_title_forgot_pass"
            app:layout_constraintTop_toBottomOf="@id/tv_title_forgot_pass" />

        <TextView
            android:id="@+id/tv_email"
            style="@style/styleTitleEditBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20dp"
            android:text="@string/email"
            app:layout_constraintLeft_toLeftOf="@id/tv_subtitle_forgot_pass"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle_forgot_pass"

            />

        <EditText
            android:id="@+id/et_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_21dp"
            android:layout_marginTop="@dimen/space_4dp"
            android:layout_marginEnd="@dimen/space_11dp"
            android:background="@drawable/input_border_normal"
            android:hint="@string/email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:padding="@dimen/space_10dp"
            android:textSize="@dimen/text_16sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_email"
            app:layout_constraintTop_toBottomOf="@id/tv_email" />

        <TextView
            android:id="@+id/tv_error_email"
            style="@style/styleWarningRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4dp"
            android:text="@string/pleaseUseValidEmail"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@id/tv_email"
            app:layout_constraintTop_toBottomOf="@id/et_email_input" />

        <Button
            android:id="@+id/btn_send_req"
            style="@style/styleLoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_21dp"
            android:layout_marginTop="@dimen/space_40dp"
            android:layout_marginEnd="@dimen/space_11dp"
            android:layout_marginBottom="@dimen/space_423dp"
            android:background="@drawable/login_button_border"
            android:text="@string/SendResetLink"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_email_input" />

        <TextView
            android:id="@+id/tv_back_login"
            style="@style/styleAssistBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_24dp"
            android:layout_marginBottom="@dimen/space_377dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/BackToLogin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_send_req" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>